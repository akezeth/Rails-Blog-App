<section class='comment_form'>
  <h2 class='form_heading'>Create a new comment</h2>

  <%= form_with model: @comment, url: user_post_comments_path, local: true, class: 'form_container' do |form| %>
    <div class='form_group'>
      <%= form.label :text, class: 'form_label' %>
      <%= form.text_area :text, class: 'form_input', placeholder: 'Add comment text...' %>
    </div>

    <%= form.submit 'Add comment', class: 'btn' %>
    <%= link_to 'Back to post', user_post_path(@post.author, @post), class: 'back_btn' %>
  <% end %>
</section>